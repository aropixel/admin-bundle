<div class="caption-overflow">
    <span>
        {% block captionOverflow %}
            {% if multiple is defined and multiple and image is defined and image %}
            {% else %}
                <a data-toggle="modal" data-target="#modalLibrary" class="btn border-white text-white btn-flat btn-icon btn-rounded iconUpload"><i class="fas fa-cloud-upload-alt"></i></a>
            {% endif %}
            {% if form.vars.attachedImage is defined and form.vars.attachedImage and form.vars.attachedImage.image %}
                {% if form.vars.attachedImage|crop_filters(get_class(form.vars.attachedImage))|length > 0 %}
                <a class="btn border-white text-white btn-flat btn-icon btn-rounded ml-5 iconCrop" data-toggle="modal" data-target="#modalCrop{{ get_short_class(form.vars.attachedImage) }}"><i class="fas fa-crop-alt"></i></a>
                {% endif %}
                <a class="btn border-white text-white btn-flat btn-icon btn-rounded ml-5 iconUnlink"><i class="fas fa-unlink"></i></a>
            {% elseif form.vars.file_name is defined and form.vars.file_name|length %}
                <a class="btn border-white text-white btn-flat btn-icon btn-rounded ml-5 iconUnlink"><i class="fas fa-unlink"></i></a>
            {% endif %}
        {% endblock %}
    </span>
</div>
