
    {% if form.publishAt is defined %}

        <div class="form-group row mb-1">
            <label class="col-sm-4 col-form-label">Post on</label>
            <div class="col-sm-8 form-widget">
                <div class="row">
                    <div class="col-6">{{ form_widget(form.publishAt['date']) }}</div>
                    <div class="col-6">{{ form_widget(form.publishAt['time']) }}</div>
                </div>
            </div>
        </div>

    {% endif %}

    {% if form.publishUntil is defined %}

        <div class="form-group row mb-1">
            <label class="col-sm-4 col-form-label">Until</label>
            <div class="col-sm-8 form-widget">
                <div class="row">
                    <div class="col-6">{{ form_widget(form.publishUntil['date']) }}</div>
                    <div class="col-6">{{ form_widget(form.publishUntil['time']) }}</div>
                </div>
            </div>
        </div>

    {% endif %}
