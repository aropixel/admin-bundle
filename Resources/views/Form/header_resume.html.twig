{% block headerResume %}

    <section class="section-header-resume">

        <div class="card">

            {% block headerResumeImage %}

                <div class="d-flex">

                    {% if form.image is defined %}
                        <div class="header-image cursor-pointer" data-bs-toggle="offcanvas" data-bs-target="#offcanvasForm">
                            <img src="{{ (form.image.vars.value ? form.image.vars.value.getWebPath() : null) | aropixel_imagine_filter('admin_thumbnail') }}" alt="" />
                            <i class="fas fa-external-link-alt editable-indicator"></i>
                        </div>
                    {% endif %}

                    <div class="header-content w-100 d-flex justify-content-between">

                        <div class="d-flex flex-column justify-content-between me-3">

                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <div class="flex-grow-1">
                                    <h2 class="mb-0">
                                        {% block headerResumeTitle %}
                                            {% if form.title is defined %}{{ form.title.vars.value }}{% endif %}
                                        {% endblock %}
                                    </h2>
                                </div>
                            </div>

                            {% block headerResumeContent %}

                                <div class="section-entry-properties d-flex flex-wrap">

                                    {% if form.vars.value.createdAt is defined and form.vars.value.createdAt  %}
                                        <div class="section-entry-property{% if form.createdAt is defined %}  cursor-pointer{% endif %}"{% if form.createdAt is defined %} data-bs-toggle="offcanvas" data-bs-target="#offcanvasForm"{% endif %}>Créé le : <strong{% if form.createdAt is defined %} class="text-underlined-dashed"{% endif %}>{{ form.vars.value.createdAt|date('d/m/Y') }}</strong></div>
                                    {% endif %}
                                    {% if form.vars.value.slug is defined and form.vars.value.slug  %}
                                        <div class="section-entry-property cursor-pointer" data-bs-toggle="offcanvas" data-bs-target="#offcanvasForm">Permalien : <strong class="text-underlined-dashed">{{ form.vars.value.slug }}</strong></div>
                                    {% endif %}
                                    {% block publishState %}
                                        {% if form.status is defined and form.vars.value.isPublished is defined  %}
                                            <div class="section-entry-status cursor-pointer" data-bs-toggle="offcanvas" data-bs-target="#offcanvasForm">
                                                <div class="d-flex align-items-center">
                                                    {% include '@AropixelAdmin/Form/status_indicator.html.twig' with {'publishable' : form.vars.value} %}
                                                </div>
                                            </div>
                                        {% endif %}
                                    {% endblock %}

                                </div>

                                {% block headerResumeExtra %}{% endblock %}

                                {% block headerResumePanels %}

                                    {% if has_tabs %}
                                        <div class="tabbable">
                                            <ul class="nav" role="tablist">
                                                {% if _navtabs is defined %}
                                                    {{ _navtabs|raw }}
                                                {% endif %}
                                            </ul>
                                        </div>
                                    {% endif %}

                                {% endblock %}

                            {% endblock %}

                        </div>

                        <div>
                            {% block publishAction %}<button class="btn btn-secondary btn-small" form="aropixel_admin_form">Enregistrer</button>{% endblock %}
                        </div>

                    </div>

                </div>

            {% endblock %}

        </div>

    </section>

{% endblock %}