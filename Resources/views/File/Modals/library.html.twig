
<!-- Full width modal -->
<div id="modalFilesLibrary" class="modal fade">
	<div class="modal-dialog modal-full">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title">Choisir des fichiers</h5>
				<button type="button" class="btn-close" data-bs-dismiss="modal"></button>
			</div>

			<div class="row">

				<div id="library_container" class="col-md-12">
					<table id="filesLibraryDataTable" class="table" data-src="{{ path('file_ajax') }}">
						<thead>
						<tr>
							<th class="no-sort"><input type="checkbox"></th>
							<th class="no-sort">Télécharger</th>
							<th>Titre</th>
							<th>Date</th>
							<th>Propriétés</th>
							<th class="text-center no-sort" align="center"></th>
						</tr>
						</thead>
					</table>
				</div>

			</div>

			<div class="alert bg-info" style="border-radius: 0; display: none" id="alertNoImg">
				<span class="text-semibold">Attention!</span> Veuillez sélectionner un ficher.
			</div>
			<div class="modal-footer d-flex justify-content-between">
				<div>
					<button type="button" class="btn btn-primary file-uploader" data-path="{{ path('file_upload') }}" data-category="{{ category }}" data-dataTabler="#libraryDataTable">Uploader un fichier<i class="icon-upload position-right"></i></button>
					<ul class="progress-upload d-inline-block"></ul>
				</div>
				<div>
					<button type="button" class="btn btn-default m-r-15" data-dismiss="modal">Fermer</button>
					<button type="button" class="btn btn-primary attach-files">Ajouter les fichiers</button>
				</div>
			</div>

		</div>

	</div>
</div>
<!-- /full width modal -->
